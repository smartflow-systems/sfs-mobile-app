# SmartFlow Systems - Mobile App Environment Configuration Example
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!
# .env should already be in .gitignore

# ===========================================
# Server Configuration
# ===========================================
NODE_ENV=development
PORT=5000

# ===========================================
# Database Configuration (Prisma)
# ===========================================
# SQLite for development
DATABASE_URL=file:./dev.db

# PostgreSQL for production (uncomment and configure as needed)
# DATABASE_URL=postgresql://username:password@localhost:5432/sfs_mobile_app

# ===========================================
# Authentication & Security
# ===========================================
# Session secret for Express sessions (generate a random string)
SESSION_SECRET=your-session-secret-here-change-this-to-a-random-string

# JWT secret for JSON Web Tokens (generate a random string)
JWT_SECRET=your-jwt-secret-here-change-this-to-a-random-string

# JWT expiration time (e.g., '1h', '7d', '30d')
JWT_EXPIRES_IN=7d

# Bcrypt salt rounds (default: 10)
BCRYPT_SALT_ROUNDS=10

# ===========================================
# Stripe Payment Integration
# ===========================================
# Get your keys from https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Stripe webhook secret for webhook signature verification
# Get from https://dashboard.stripe.com/test/webhooks
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ===========================================
# Mobile App Configuration
# ===========================================
# App bundle identifier
APP_BUNDLE_ID=com.smartflowsystems.mobile

# App display name
APP_NAME=SmartFlow Mobile

# Deep linking scheme
DEEP_LINK_SCHEME=smartflow

# ===========================================
# Push Notifications (if using)
# ===========================================
# Firebase Cloud Messaging server key
# FCM_SERVER_KEY=your-fcm-server-key-here
# FCM_SENDER_ID=your-fcm-sender-id-here

# Apple Push Notification Service (APNS)
# APNS_KEY_ID=your-apns-key-id-here
# APNS_TEAM_ID=your-apns-team-id-here
# APNS_BUNDLE_ID=com.smartflowsystems.mobile

# ===========================================
# Multi-Agent Orchestration
# ===========================================
# Configuration for multi-agent orchestration system
ORCHESTRATOR_PORT=5100
AGENT_TIMEOUT=30000

# ===========================================
# Deployment & CI/CD
# ===========================================
# Replit deployment token (if deploying to Replit)
REPLIT_TOKEN=your-replit-token-here

# GitHub Personal Access Token for auto-sync
SFS_PAT=your-github-personal-access-token-here

# Auto-sync configuration
AUTO_SYNC_ENABLED=false
SYNC_INTERVAL=300000

# ===========================================
# CORS Configuration
# ===========================================
# Comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:3000,http://localhost:5000

# ===========================================
# Rate Limiting
# ===========================================
# Maximum requests per window (default: 100)
RATE_LIMIT_MAX=100

# Time window in milliseconds (default: 15 minutes)
RATE_LIMIT_WINDOW=900000

# ===========================================
# Logging & Monitoring
# ===========================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable debug mode
DEBUG=false
